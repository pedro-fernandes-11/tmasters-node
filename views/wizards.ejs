<!DOCTYPE html>
<head>
    <%- include('layout/head'); %>
    <%- include('wizards/style'); %>
    <meta charset="UTF-8">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
  <div class="myContainer">
    <%- include('layout/header'); %>
    <div id="main">
      <% if (isLoggedIn) {%>
        <a href="/wizards/add" style="margin-bottom: 50px" class="btn btn-primary">Add</a>
      <% } %>
      <div id="content-grid">
      <% if (typeof data == 'object' && data.length > 0) { %>
        <% data.forEach(function(each){ %>
          <div class="card" style="width: 18rem;">
            <img class="card-img-top" style="width: 100%; height: 200px; object-fit: cover" src="assets/uploads/<%=each.img%>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%=each.name%></h5>
              <p><%=each.description%></p>
              <% if (isLoggedIn) {%>
                <a href="/wizards/edit/<%=each.id%>" class="btn btn-primary">Edit</a>
                <a href="/wizards/delete/<%=each.id%>" class="btn btn-secondary">Delete</a>
              <% } %>
            </div>
          </div>
        <% }); %>
      <% }else{ %>
        <h2>Nothing to show here</h2>
      <% } %>
      </div>
    </div>
    <%- include('layout/footer'); %>
  </div>
</body>
</html>